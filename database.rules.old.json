{
  "rules": {
    "config": {
      ".read": "auth != null"
    },
    "users": {
      "$uid": {
        "update-profile": {
          ".read": "auth != null && auth.uid == $uid"
        },
        "orders": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        },
        "profile": {
          ".read": "auth != null && auth.uid == $uid",
          "phone": {
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        "roles": {
          ".read": "auth != null && auth.uid == $uid"
        }
      }
    },
    "orders": {
      ".read": "auth != null && root.child('roles').child('paid_user').hasChild(auth.uid)",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
